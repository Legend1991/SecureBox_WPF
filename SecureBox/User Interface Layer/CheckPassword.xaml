<Window x:Class="SecureBox.User_Interface_Layer.CheckPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Check password" Height="133.083" Width="300" Icon="/SecureBox;component/favicon.ico" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Label Content="Enter password for the drive:" Padding="0" Margin="10,10,10,0" />
            <PasswordBox x:Name="textBoxPass" Height="23" HorizontalAlignment="Left" Margin="10,0,10,5" Width="272" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="buttonOK" Width="75" Height="23" Margin="5,10" Content="OK" Click="buttonOK_Click" />
            <Button Name="buttonCancel" Width="75" Height="23" Margin="5,10,10,10" Content="Cancel" Click="buttonCancel_Click" />
        </StackPanel>
    </DockPanel>
</Window>
