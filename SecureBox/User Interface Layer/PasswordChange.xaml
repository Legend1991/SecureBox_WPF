<Window x:Class="SecureBox.User_Interface_Layer.PasswordChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Change" Height="300" Width="329" Icon="/SecureBox;component/favicon.ico" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Label Content="Current Password:" Padding="0" Margin="10,10,10,0" />
            <PasswordBox Name="textBoxCurrPass" Height="23" Width="280" HorizontalAlignment="Left" Margin="10,0,10,5" />
            <Label Content="New Password:" Padding="0" Margin="10,5,10,0" />
            <PasswordBox Name="textBoxNewPass" Margin="10,0,10,5" Height="23" Width="280" HorizontalAlignment="Left" />
            <Label Content="Confirm:" Padding="0" Margin="10,5,10,0" />
            <PasswordBox Name="textBoxConf" Margin="10,0,10,10" HorizontalAlignment="Left" Height="23" Width="280" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="buttonOK" Width="75" Height="23" Margin="5,10" Content="OK" Click="buttonOK_Click" />
            <Button Name="buttonCancel" Width="75" Height="23" Margin="5,10,10,10" Content="Cancel" Click="buttonCancel_Click" />
        </StackPanel>
    </DockPanel>
</Window>
